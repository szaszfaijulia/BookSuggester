                        TextColor="White" />
                <!-- DataBinding! -->
                    <Button Margin="0,10,0,0" Text="Érdekel"
                        Command="{Binding OpenWebCommand}" 
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />
                <!-- DataBinding! -->
                </StackLayout>
                
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>